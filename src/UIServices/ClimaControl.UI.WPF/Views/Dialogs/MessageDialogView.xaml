<Window x:Class="ClimaControl.UI.WPF.Views.Dialogs.MessageDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClimaControl.UI.WPF.Views.Dialogs"
        xmlns:vm="clr-namespace:ClimaControl.UI.UICore.Dialogs.ViewModels;assembly=ClimaControl.UI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:IMessageDialogViewModel,IsDesignTimeCreatable=False}"
        Title="{Binding Title}" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Message}"/>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
            <Button Content="Ok"
                    Width="70"
                    Height="25"
                    Margin="5"/>
            <Button Content="Отмена"
                    Width="70"
                    Height="25"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
